{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist", "node_modules", "typings"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
